<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">
            <i class="bi bi-calculator me-2"></i>
            Price Calculator
          </h2>
        </div>
        <div class="card-body">
          <!-- Flash Messages -->
          <% if flash[:success] %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <i class="bi bi-check-circle me-2"></i>
              <%= flash[:success] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>

          <% if flash[:error] %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <i class="bi bi-exclamation-triangle me-2"></i>
              <%= flash[:error] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>

          <!-- CSV Upload Section -->
          <div class="mb-4">
            <h4 class="text-primary mb-3">
              <i class="bi bi-upload me-2"></i>
              Upload CSV File
            </h4>
            <%= form_with url: upload_csv_price_calculator_index_path, method: :post, multipart: true, local: true, class: "row g-3", id: "csv_upload_form" do |form| %>
              <div class="col-md-8">
                <div class="input-group">
                  <%= form.file_field :csv_file, accept: ".csv", class: "form-control", required: true, id: "csv_file_input" %>
                  <label class="input-group-text" for="csv_file_input">
                    <i class="bi bi-upload"></i> Choose File
                  </label>
                </div>
                <div class="form-text">
                  Upload a CSV file with columns: Product Family, Level Detail, Unit DTP per Year / Per Txn
                </div>
                <div id="file_name_display" class="mt-2 text-success" style="display: none;">
                  <i class="bi bi-file-earmark-text me-1"></i>
                  <span id="selected_file_name"></span>
                </div>
              </div>
              <div class="col-md-4">
                <%= form.submit "Upload CSV", class: "btn btn-primary w-100" %>
              </div>
            <% end %>
          </div>

          <!-- Output Table -->
          <% if @products.any? %>
          <div class="mb-4">
            <h4 class="text-primary mb-3">
              <i class="bi bi-table me-2"></i>
              Uploaded Data Table
            </h4>
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>Product Name</th>
                    <th>Level</th>
                    <th>DTP Price</th>
                    <th>Part Number</th>
                  </tr>
                </thead>
                <tbody>
                  <% @products.each do |product| %>
                    <tr>
                      <td><%= product.name %></td>
                      <td><span class="badge bg-primary"><%= product.level %></span></td>
                      <td>$<%= product.dtp_price %></td>
                      <td><code><%= product.part_number %></code></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <% end %>

          <!-- Calculator Form -->
          <div class="calculator-form" data-controller="price-calculator">
            <h4 class="text-primary mb-3">
              <i class="bi bi-calculator me-2"></i>
              Price Calculator
            </h4>

            <div class="row g-3">
              <!-- Anniversary Date -->
              <div class="col-md-6">
                <label for="anniversary_date" class="form-label">Anniversary Date</label>
                <input type="date" class="form-control" id="anniversary_date" data-price-calculator-target="anniversaryDate" data-action="change->price-calculator#calculateDays">
              </div>

              <!-- Current Date -->
              <div class="col-md-6">
                <label for="current_date" class="form-label">Current Date</label>
                <div class="input-group">
                  <input type="date" class="form-control" id="current_date" data-price-calculator-target="currentDate" data-action="change->price-calculator#calculateDays">
                  <button class="btn btn-outline-secondary" type="button" data-action="click->price-calculator#setToday">
                    <i class="bi bi-calendar-check"></i> Today
                  </button>
                </div>
              </div>

              <!-- Days -->
              <div class="col-md-6">
                <label for="days" class="form-label">Days</label>
                <input type="text" class="form-control" id="days" readonly data-price-calculator-target="days">
              </div>

              <!-- Level -->
              <div class="col-md-6">
                <label for="level" class="form-label">Level</label>
                <select class="form-select" id="level" data-price-calculator-target="level" data-action="change->price-calculator#loadProducts">
                  <option value="">Select Level</option>
                  <% @levels.each do |level| %>
                    <option value="<%= level %>"><%= level %></option>
                  <% end %>
                </select>
              </div>

              <!-- Part Number -->
              <div class="col-md-6">
                <label for="part_number" class="form-label">Part Number</label>
                <div class="position-relative">
                  <input type="text" class="form-control" id="part_number" placeholder="Search Part Number..." data-price-calculator-target="partNumber" data-action="input->price-calculator#searchPartNumbers">
                  <div id="part_number_suggestions" class="dropdown-menu w-100" style="display: none;"></div>
                </div>
              </div>

              <!-- Product Name -->
              <div class="col-md-6">
                <label for="product_name" class="form-label">Product Name</label>
                <div class="position-relative">
                  <input type="text" class="form-control" id="product_name" placeholder="Search Product Name..." data-price-calculator-target="productName" data-action="input->price-calculator#searchProducts">
                  <div id="product_name_suggestions" class="dropdown-menu w-100" style="display: none;"></div>
                </div>
              </div>

              <!-- DTP Price -->
              <div class="col-md-6">
                <label for="dtp_price" class="form-label">DTP Price</label>
                <div class="input-group">
                  <input type="text" class="form-control" id="dtp_price" readonly data-price-calculator-target="dtpPrice">
                  <button class="btn btn-outline-secondary" type="button" data-action="click->price-calculator#copyDtpPrice">
                    <i class="bi bi-clipboard"></i> Copy
                  </button>
                </div>
              </div>

              <!-- Price -->
              <div class="col-12">
                <label for="price" class="form-label">Price</label>
                <input type="text" class="form-control form-control-lg bg-light" id="price" readonly data-price-calculator-target="price">
                <div class="form-text">
                  Price = (DTP Price / 365) Ã— Days
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const fileInput = document.getElementById('csv_file_input');
  const fileNameDisplay = document.getElementById('file_name_display');
  const selectedFileName = document.getElementById('selected_file_name');

  if (fileInput) {
    fileInput.addEventListener('change', function() {
      if (this.files && this.files[0]) {
        selectedFileName.textContent = this.files[0].name;
        fileNameDisplay.style.display = 'block';
      } else {
        fileNameDisplay.style.display = 'none';
      }
    });
  }
});
</script>
